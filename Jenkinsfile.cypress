pipeline{
    agent any

    stages{
        stage("SCM"){
            steps {
                cleanWs()
                git branch: 'main', url: 'https://github.com/adrumov/cypress-presentation.git'
            }
        }
        stage("build image"){
            steps{
                sh "docker build -t cypress_presentation:${env.GIT_COMMIT[0..7]} -v /vagrant/cypress:/root/cypress-presentation/cypress/videos ."
            }
        }
    }
}